{
  "name": "@eng-tools/zod-to-d2",
  "version": "0.0.22",
  "description": "A library that extends Zod types and provides tools to convert schemas to D2 diagrams.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/EngineersTools/zod-to-d2.git"
  },
  "private": false,
  "type": "module",
  "main": "./dist/index.js",
  "bin": {
    "zod2d2": "dist/cli/cli.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.js"
    },
    "./parser/*": {
      "types": "./dist/parser/*.d.ts",
      "import": "./dist/parser/*.js",
      "require": "./dist/parser/*.js"
    },
    "./builder/*": {
      "types": "./dist/builder/*.d.ts",
      "import": "./dist/builder/*.js",
      "require": "./dist/builder/*.js"
    },
    "./loader/*": {
      "types": "./dist/loader/*.d.ts",
      "import": "./dist/loader/*.js",
      "require": "./dist/loader/*.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "tsc",
    "prepublishOnly": "pnpm build",
    "test": "vitest --run",
    "watch": "tsc --watch"
  },
  "keywords": [
    "zod",
    "d2",
    "erd",
    "diagram",
    "codegen",
    "typescript"
  ],
  "author": "Carlos Gamez (@EngineersTools)",
  "license": "MIT",
  "packageManager": "pnpm@10.14.0",
  "peerDependencies": {
    "zod": "^3.25.0 || ^4.0.0"
  },
  "devDependencies": {
    "@types/node": "^24.1.0",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4",
    "zod": "^3.25.0 || ^4.0.0"
  },
  "dependencies": {
    "bundle-require": "^5.1.0",
    "chalk": "^5.6.0",
    "commander": "^14.0.0"
  }
}
